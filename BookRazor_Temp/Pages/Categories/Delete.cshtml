@page
@model BookRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="CategoryDelete.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="CategoryDelete.Name"></label>
            <input asp-for="CategoryDelete.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="CategoryDelete.DisplayOrder"></label>
            <input asp-for="CategoryDelete.DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="Submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>

        </div>
    </div>
</form>
